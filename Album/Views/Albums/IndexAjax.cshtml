
@{
    ViewBag.Title = "IndexAjax";
}

<h2>Index Album - Ajax</h2>

<table id="albumsTable">
    <thead>
        <tr>
           <td>
               Name
           </td>
            <td> Price</td>
            <td>
                Image
            </td>
            <td>
                Title
            </td>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#albumsTable").DataTable({
                ajax: {
                    url: "/api/AlbumsAPI",
                    dataSrc: ""
                },
                columns: [{
                    data: "Title",
                    render: function (settings, type, album) {
                        return "<a href='/Albums/Details/" + album.Id + "'>" + album.Title + "</a>";
                    }
                },
                    {
                        data:"Price"
                    },
                    {
                        data: "AlbumArtUrl",
                        render: function (settings, type, album) {
                            return "<img src='"+album.AlbumArtUrl+"' style='max-width:200px;'/>";
                        }
                    }
                ]
            })
        })
    </script>
    
    }