@model Album.Models.AddToStore
@{
    ViewBag.Title = "AddToStoref";
}

<h2>Add album to Store: @ViewBag.StoreName</h2>

@using (Html.BeginForm("AddToStore", "Stores"))
{
    <div class="form-group">
        @Html.DropDownListFor(m=>m.albumId,new SelectList(Model.albums,"Id", "Title"),new {@class="form-control" })
    </div>
    @Html.HiddenFor(m=>m.storeId)
    <button type="submit" class="btn btn-default">Save</button>
}          